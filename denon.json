{
  "$schema": "https://deno.land/x/denon/schema.json",
  "scripts": {
    "start": "app.ts"
  },
  "allow": [
    "env",
    "write",
    "read",
    "plugin",
    "net"
  ],
  "unstable": true,
  "fmt": true,
  "watcher": {
    "interval": 350,
    "exts": [
      "js",
      "ts",
      "json",
      "html",
      "css"
    ],
    "match": [
      "*.*"
    ],
    "skip": [
      "*/.git/*"
    ],
    "legacy": false
  },
  "logger": {
    "fullscreen": true,
    "quiet": false,
    "debug": true
  }
}